<html>
    <head>
        <style>
            body{
                padding: 60px 100px;
            }
            table{
                font-family: "roboto,sans-serif";
                border-collapse: collapse;
                width: 100%;
            }
            td,th{
                border: 1px solid #ddd;
                text-align: left;
                padding: 8px; 
            }
        </style>
    </head>
    <body>
        <h3 style="text-align: center"> Restaurant </h3>
        <table>
            <tr>
                <th>Name: <%= name%></th>
                <th>Email: ,%= email%></th>
            </tr>
            
            <tr>
                <th>Contact Number: <%= contactNumber %></th>
                <th>Payment Method: <%= paymentMethod %></th>
            </tr>
        </table>

        <h3>Product Details</h3>
        <table>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Sub Total</th>
            </tr>
            <% if(productDetails.length > 0){ %>
                <% productDetails.forEach(product => { %>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.category %></td>
                        <td><%= product.quantity %></td>
                        <td><%= product.price %></td>
                        <td><%= product.total %></td>
                    </tr>
                <% }); %>
            <% } %>
        </table>
        <h4 style="text-align: right;">Total: <%= totalAmount %></h4>
        <h3 style="text-align: center">Than you for visiting</h3>
    </body>
</html>